@model projeDeneme.Models.Security.LoginViewModel
@{
    Layout = null;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h3>Login Page</h3>
    <form asp-controller="Security" asp-action="Login" method="post">
        <div asp-validation-summary="All"></div>
        <input type="text" asp-for="UserName" placeholder="Kullanıcı Adı" />
        <input type="text" asp-for="Password" placeholder="Şife" />
        <input type="submit" value="Giriş Yap"/>

    </form>

</body>
</html>
