@model projeDeneme.Models.Security.RegisterViewModel
@{
    Layout = null;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <h3>Kayıt Form</h3>
    <form asp-controller="Security" asp-action="Register" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="All"></div>
        <input type="file" name="file"  multiple />
        <input type="text" asp-for="UserName" placeholder="Kullanıcı Adı"/>
        <input type="text" asp-for="Password" placeholder="Şifre"/>
        <input type="text" asp-for="ConfirmedPassword" placeholder="Şifre Doğrula"/>
        <input type="text" asp-for="Email" placeholder="Email"/>
        <input type="submit" value="Kayıd Ol"/>
    </form>
</body>
</html>
